<UserControl
	x:Class="Anilibria.Pages.AboutPage.AboutView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<Grid
		Background="#D3D3D3">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Border
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Background="#b32121"
			BorderBrush="#881919"
			BorderThickness="0 0 0 2">
			<RelativePanel
				HorizontalAlignment="Stretch">
				<Button
					Style="{StaticResource IconsButtonStyle}"
					Command="{Binding ShowSidebarCommand}">
					<Image
						Width="{StaticResource IconSize}"
						Height="{StaticResource IconSize}"
						Source="/Assets/Icons/humburger.svg"
					/>
				</Button>
			</RelativePanel>
		</Border>

		<StackPanel
			Grid.Column="0"
			Grid.Row="1">
			<Image
				Margin="0 10 0 0"
				VerticalAlignment="Center"
				Source="/Assets/anilibriaiconbig.png"
				Width="140"
				Height="140"
			/>
			<TextBlock
				FontSize="30"
				Foreground="Black"
				HorizontalAlignment="Center">
				Клиент для сайта AniLibria
			</TextBlock>
			<TextBlock
				FontSize="26"
				HorizontalAlignment="Center">
				<Hyperlink NavigateUri="https://www.anilibria.tv/">https://www.anilibria.tv/</Hyperlink>
			</TextBlock>
			<TextBlock
				Foreground="Black"
				FontSize="20"
				HorizontalAlignment="Center">
				<Run
					Text="Версия"
				/>
				<Run
					Text="{Binding Version}"
				/>
			</TextBlock>
			<TextBlock
				Foreground="Black"
				FontSize="24"
				Margin="0 10 0 10"
				HorizontalAlignment="Center">
				Спасибо что выбираете нас!
			</TextBlock>
			<TextBlock
				Foreground="Black"
				FontSize="24"
				Margin="0 10 0 10"
				HorizontalAlignment="Center">
				Благодарности:
			</TextBlock>
			<TextBlock
				Foreground="Black"
				FontSize="22"
				HorizontalAlignment="Center">
				poiuty
			</TextBlock>
			<TextBlock
				Foreground="Black"
				FontSize="22"
				HorizontalAlignment="Center">
				RadiationX
			</TextBlock>
		</StackPanel>
		<StackPanel
			Grid.Column="1"
			Grid.Row="1">
			<TextBlock
				Foreground="Black"
				FontSize="20"
				Margin="0 10 0 10"
				HorizontalAlignment="Center">
				Используемые иконки:
			</TextBlock>
			<ScrollViewer
				MaxHeight="200">
				<StackPanel Orientation="Vertical">
					<TextBlock
						Foreground="Black"
						FontSize="16"
						HorizontalAlignment="Center">
						<Run>Icons made by</Run>
						<Hyperlink NavigateUri="https://www.freepik.com/">Freepik</Hyperlink>
						<Run>from</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/">www.flaticon.com</Hyperlink>
						<Run>is licensed by</Run>
						<Hyperlink NavigateUri="http://creativecommons.org/licenses/by/3.0/">CC 3.0 BY</Hyperlink>
					</TextBlock>
					<TextBlock
						Foreground="Black"
						FontSize="16"
						HorizontalAlignment="Center">
						<Run>Icons made by</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/authors/cole-bemis">Cole Bemis</Hyperlink>
						<Run>from</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/">www.flaticon.com</Hyperlink>
						<Run>is licensed by</Run>
						<Hyperlink NavigateUri="http://creativecommons.org/licenses/by/3.0/">CC 3.0 BY</Hyperlink>
					</TextBlock>
					<TextBlock
						Foreground="Black"
						FontSize="16"
						HorizontalAlignment="Center">
						<Run>Icons made by</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/authors/smashicons">Smashicons</Hyperlink>
						<Run>from</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/">www.flaticon.com</Hyperlink>
						<Run>is licensed by</Run>
						<Hyperlink NavigateUri="http://creativecommons.org/licenses/by/3.0/">CC 3.0 BY</Hyperlink>
					</TextBlock>
					<TextBlock
						Foreground="Black"
						FontSize="16"
						HorizontalAlignment="Center">
						<Run>Icons made by</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/authors/srip">srip</Hyperlink>
						<Run>from</Run>
						<Hyperlink NavigateUri="https://www.flaticon.com/">www.flaticon.com</Hyperlink>
						<Run>is licensed by</Run>
						<Hyperlink NavigateUri="http://creativecommons.org/licenses/by/3.0/">CC 3.0 BY</Hyperlink>
					</TextBlock>
					<TextBlock
